{
  "name": "web-parser",
  "description": "This is a simple tool to parse websites using the jQuery interface.",
  "version": "2.0.0",
  "author": "Alejandro Santiago Nieto",
  "license": "MIT",
  "dependencies": {
    "cheerio": "^0.22.0"
  },
  "devDependencies": {
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "eslint": "^8.5.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^4.0.0",
    "mocha": "^10.0.0",
    "nock": "^13.2.9",
    "nyc": "^15.1.0",
    "prettier": "^2.5.1"
  },
  "main": "index.js",
  "files": [
    "index.js",
    "lib"
  ],
  "scripts": {
    "test": "mocha --require test/setup.js --ignore test/setup.js test/*.js",
    "test:cover": "nyc --reporter=lcov --reporter=text-summary --all --include \"lib/*.js\" npm test",
    "lint": "eslint index.js lib/*.js test/*.js examples/*.js",
    "lint:fix": "npm run lint -- --fix",
    "check": "npm test && npm run lint && npm outdated"
  }
}
